set textwidth=79   " lines longer than 79 columns will be broken
set shiftwidth=4   " operation >> indents 4 columns; << unindents 4 colums
set tabstop=4      " a hard TAB displays as 4 colums
set expandtab        " insert spaces when hitting TABs
set softtabstop=4  " inser/delete/ 4 spaces when hitting a TAB/BACKSPACE
set shiftround       " round indent to multiple of 'shiftwidth'
set autoindent       " align the new line indent with the pervious line
set ruler           " show the number line on the bar
set number          " adds line numbers


syntax enable
set background=light
colorscheme solarized
